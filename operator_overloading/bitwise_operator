#include <stdio.h>
#include <iostream>
#include <string>
using namespace std;
class Example
{
  int value ;
 
 
  public :
  Example(int v = 0) : value(v) { }
  
  Example operator~()
  {
      return Example(~value);
  }
  Example operator&(const Example &rhs)
  {
     return Example ( value & rhs.value);
  }
  Example operator|(const Example &rhs)
  {
      
      return Example( value | rhs.value);
  }
  Example operator ^ (const Example &rhs)
  {
      return Example(value ^ rhs.value);
  }
  Example operator >> (int n)
  {
      return Example( value >> n);
  }
  Example operator << (int n)
  {
      return Example( value << n);
  }

  void disp()
  {
      cout <<"value" <<value ;
  }
};
int main()
{
    Example obj1(6), obj2(2);
   
     
    /*Example obj3 = ~obj1;
    obj3.disp(); */
    
    /*Example obj3 = obj1 & obj2;
    
    obj3.disp();*/
    
    
    /*Example obj3 = obj1 | obj2;
    
    obj3.disp();*/
    
    /*Example obj3 = obj1 ^ obj2;
    obj3.disp();*/
    
    
    Example obj3 = obj1 << 3; //obj1(6) << 3 11000  ==> 48
    obj3.disp();
    //110000
    
     Example obj4 = obj1 >> 2; //obj1(6) >> 3  001  ==> 1
     obj4.disp();
    
    return 0;
}
