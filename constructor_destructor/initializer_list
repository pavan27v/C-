/****************************************************************************************
  constructor can be oveloaded 
  

****************************************************************************************/


#include<iostream>
#include<math.h>
#include<stdint.h>
using namespace std;

class complex 
{
   private : 
       double real;
	   double imaginary;
  
   public :
       //complex(double r = 0.0, double i = 0.0) : real(r), imaginary(i) {} 
       
       //constructor can also be overloaded
       
       complex(double r , double i ) : real(r), imaginary(i) {}  // two parameter 
	   complex(double r) :  real(r), imaginary(0.0) {}    // one parameter
	   complex() :  real(0.0), imaginary(0.0) {}    // no parameter
	   
	  // ~complex() {}
	   
	  double norm() 
	  { 
	     return sqrt( this->real * this->real + this->imaginary * this->imaginary );
	   
      }
	  void print()
	  {
	     cout<< "i" << this->real << "+j" << this->imaginary <<endl;
		 cout<< norm()<<endl;
		 
	  }
	  
};
int main()
{
   //complex c(4.2 , 3.5) d = {2.33, 3.44}; ==>  // different ways to initialize
    //c.print();
   //d.print();
   
     complex c1(4.2 , 3.5),   //complex :: complex (4.2, 3.5) // both are initialized 
             c2(4.2),         //complex :: complex (4.2, 0) // second parameter is initialized
             c3;              //complex :: complex (0, 0 )// both parameter is initialized
   
    c1.print();
    c2.print();
    c3.print(); 
   
}
